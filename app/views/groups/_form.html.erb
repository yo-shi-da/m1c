<%= form_with(model: group, local: true) do |form| %>
  <% if group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(group.errors.count, "件") %><%= t('button.errors') %></h2>

      <ul>
        <% group.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label t('groups.name') %>
    <%= form.text_field :name, placeholder: "例：A県立医大病院", class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-outline-primary" %>
  </div>
<% end %>