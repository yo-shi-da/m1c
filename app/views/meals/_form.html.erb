<%= form_with(model: meal, local: true) do |form| %>
  <% if meal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(meal.errors.count, "error") %> prohibited this meal from being saved:</h2>

      <ul>
        <% meal.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">

    <div class="row">
      <div class="form-group">
        <%= form.label :sugar_amount %>
        <%= form.number_field :sugar_amount, class: 'form-control' %>
      </div>
    </div>

    <div class="row">
      <div class="form-group">
        <%= form.label :sugar_cube %>
        <%= form.number_field :sugar_cube, class: 'form-control' %>
      </div>
    </div>

    <div class="row">
      <div class="form-group">
        <%= form.label :classification %>
        <%= form.number_field :classification, class: 'form-control' %>
      </div>
    </div>

    <div class="row">
      <div class="form-group">
        <%= form.label :start_time %>
        <%= form.date_field :start_time, class: 'form-control' %>
      </div>
    </div>

    <div class="row">
      <div class="form-group">
        <%= form.label :remarks %>
        <%= form.text_area :remarks, class: 'form-control' %>
      </div>
    </div>

    <div class="row">
      <div class="form-group">
        <%= form.label :image %>
        <%= form.file_field :image %>
      </div>
    </div>

    <div class="form-group">
        <%= form.submit %>
    </div>

  </div>
<% end %>
