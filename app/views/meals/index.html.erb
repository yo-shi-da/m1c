<h1>食事一覧</h1>

<%= search_form_for @q do |f| %>
  <%= f.label :sugar_amount, t('meals.sugar_amount') %>
  <%= f.number_field :sugar_amount_gteq %>以上～
  <%= f.number_field :sugar_amount_lteq %>以下
  <%= f.submit '検索', class:"btn btn-outline-primary" %>
<% end %>

<br>
  <%= link_to '食事投稿', new_meal_path, class:"btn btn-secondary" %>
<br>

<% if @current_user_group&.owner_id != nil && current_user.id == @current_user_group.owner_id %>
  <% if params[:id].present? %> <!-- 他人のmeal indexを閲覧している場合 -->
    <%= link_to 'CSVエクスポート(owner)', export_csv_path(format: :csv, id: @user.id), class:"btn btn-success" %>
  <% else %> <!-- 自分自身(current_user)のmeal indexを閲覧している場合 -->
    <%= link_to 'CSVエクスポート(owner)', export_csv_path(format: :csv, id: current_user.id), class:"btn btn-success" %>
  <% end %>
<% end %>

<br>
<div class="mb-3">
  <%= paginate @meals %>
  <%= page_entries_info @meals %>
</div>

<table class="table table-hover">
  <thead>
    <tr class="table-success">
      <th><%= sort_link(@q, :sugar_amount) %></th>
      <th><%= t('meals.sugar_cube') %></th>
      <th><%= t('meals.classification') %></th>
      <th><%= t('meals.reading_checks') %></th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.sugar_amount %></td>
        <td><%= meal.sugar_cube %></td>
        <td><%= meal.classification %></td>

        <% if meal.reading_checks %>
          <td>既読</td>
        <% else %>
          <td>未読</td>
        <% end %>
        
        <%# if @current_user_group&.owner_id != nil %>
        <% if @current_user_group.present? %>
          <% if current_user.id == @current_user_group.owner_id %> 
            <td><%= button_to '既読にする', {controller: 'meals', action: 'read_changes'}, {method: :patch, params: {id: meal.id}, class: 'btn btn-sm btn-danger' } %></td>
          <% end %>
        <% end %>
        
        <td><%= link_to '詳細', meal, class:"btn btn-outline-primary" %></td>
        <td><%= link_to '編集', edit_meal_path(meal), class:"btn btn-outline-success" %></td>
        <td><%= link_to '削除', meal, class:"btn btn-outline-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
