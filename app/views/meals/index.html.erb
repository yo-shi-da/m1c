<p id="notice"><%= notice %></p>

<h1>Meals</h1>

<table>
  <thead>
    <tr>
      <th>Sugar amount</th>
      <th>Sugar cube</th>
      <th>Classification</th>
      <th>Image</th>
      <th>Start time</th>
      <th>Reading checks</th>
      <th>Remarks</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.sugar_amount %></td>
        <td><%= meal.sugar_cube %></td>
        <td><%= meal.classification %></td>
        <td><%= meal.image %></td>
        <td><%= meal.start_time %></td>
        <td><%= meal.reading_checks %></td>
        <td><%= meal.remarks %></td>
        <td><%= meal.user_id %></td>
        <td><%= link_to 'Show', meal %></td>
        <td><%= link_to 'Edit', edit_meal_path(meal) %></td>
        <td><%= link_to 'Destroy', meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

