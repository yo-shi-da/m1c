<%= form_with(model: food, local: true) do |form| %>
  <% if food.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(food.errors.count, "ä»¶") %><%= t('button.errors') %></h2>

      <ul>
        <% food.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="form-group">
      <%= form.label t('foods.classification') %><br />
      <%= form.select :classification, Food.classifications.keys, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="form-group">
      <%= form.label t('foods.food_name') %>
      <%= form.text_field :food_name, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="form-group">
      <%= form.label t('foods.food_amount') %>
      <%= form.number_field :food_amount, min: '0', class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="form-group">
      <%= form.label t('foods.sugar_amount') %>
      <%= form.number_field :sugar_amount, min: '0', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= form.submit class:"btn btn-outline-primary" %>
  </div>
<% end %>