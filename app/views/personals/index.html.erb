<p id="notice"><%= notice %></p>

<h1>Personals</h1>

<table>
  <thead>
    <tr>
      <th>Birth date</th>
      <th>Height</th>
      <th>Body weight</th>
      <th>Gender</th>
      <th>Bmi</th>
      <th>Waist circumference</th>
      <th>Hba onec</th>
      <th>Underlying disease</th>
      <th>Intake per oneday</th>
      <th>Remarks</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personals.each do |personal| %>
      <tr>
        <td><%= personal.birth_date %></td>
        <td><%= personal.height %></td>
        <td><%= personal.body_weight %></td>
        <td><%= personal.gender %></td>
        <td><%= personal.bmi %></td>
        <td><%= personal.waist_circumference %></td>
        <td><%= personal.hba_onec %></td>
        <td><%= personal.underlying_disease %></td>
        <td><%= personal.intake_per_oneday %></td>
        <td><%= personal.remarks %></td>
        <td><%= personal.user_id %></td>
        <td><%= link_to 'Show', personal %></td>
        <td><%= link_to 'Edit', edit_personal_path(personal) %></td>
        <td><%= link_to 'Destroy', personal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

